@model SliderViewModel
@{
    int i = 0, j = 0;
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="margin-top:90px">
    <ol class="carousel-indicators">
        @foreach (var item in Model.LstBanner)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@(i++)" class="@(i==1?"active":"")"></li>
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model.LstBanner)
        {
            @if (++j <= 1)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="~/uploads/sitesetting/@item" alt="@item">
                    <div class="carousel-caption d-none d-md-block">
                        @Html.Raw(Model.Slogan)
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="~/uploads/sitesetting/@item" alt="@item">
                    <div class="carousel-caption d-none d-md-block">
                        @Html.Raw(Model.Slogan)
                    </div>
                </div>
            }

        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

