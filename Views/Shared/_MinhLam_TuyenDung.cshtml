@model NewsViewModel
@{
    ViewData["Controller"] = "Home";
    ViewData["Action"] = "ShowPage";
    <title>@Model.PageTitle</title>
    <meta property="og:title" content="@Model.PageSEOTitle" />
    <meta property="og:description" content="@Model.PageSEODes" />
    <meta http-equiv="keywords" name="keywords" content="@Model.PageSEOKeyword" />
    <meta http-equiv="description" name="description" content="@Model.PageSEODes" />
    <meta name="author" content="MINHLAMCONS.COM">
}
<div class="row">
    <div class="col-md-12">
        <p class="pagetitle" style="text-transform:uppercase">@Model.PageTitle</p>
        <hr class="pageline" />
        <p class="pagedes">@Model.PageDes</p>
        <div class="row">
            <div class="col-md-12">
                @if (Model.LstNews.Data.Any())
                {
                    <div class="row tuyendung">
                        @foreach (var item in Model.LstNews.Data)
                        {
                            <div class="col-md-10">
                                <a class="title" href="/@item.Url">
                                    @(item.Name.Length>40? (item.Name.Substring(0, 40) + "...") : item.Name)
                                </a>
                                <p>Ngày đăng: @item.CreatedDate.ToString("dd/MM/yyyy hh:mm")</p>

                            </div>
                            <div class="col-md-2">
                                <a class="btn" href="/@item.Url"><span class="fas fa-play" style="font-size:.7em;position:relative;top:-2px"></span> Xem thêm</a>
                            </div>
                            <hr />
                        }
                    </div>

                    <div>
                        <partial name="_PaginationPartial" view-data="ViewData" model="Model.LstNews" />
                    </div>
                }
            </div>
        </div>

    </div>
</div>
