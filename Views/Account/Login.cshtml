@model LoginViewModel
@using Microsoft.AspNetCore.Http.Extensions
@{
    Layout = "_LayoutBlank";
    ViewData["Title"] = "Đăng nhập";
    <meta property="og:title" content="Đăng nhập xetot.com" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="@Context.Request.GetEncodedUrl()" />
    <meta property="og:image" content="/uploads/cauhinhwebsite/a1346de2-0d6f-4f73-9a29-686cc0cbf8bf_logo.png" />
    <title>Đăng nhập xetot.com</title>
    <meta name="description" content="Đăng nhập xetot.com" />
}

@section Css
{
    <link rel="stylesheet" href="~/css/account.css">
}
<div id="main-content" class="w-100 float-left bg-grey">
    <div class="box-account bg-white">
        <h1 class="xt-title-list text-center">Đăng nhập</h1>
        <div class="login-by-phone">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Mobile" class="form-control input-user" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control input-password" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p class="mb-0 text-center text-xl-right color-grey">Quên mật khẩu? <a asp-action="ForgotPassword" class="color-green">Bấm vào đây</a></p>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-info">Đăng Nhập</button>
                </div>
                <div class="form-group mb-4">
                    <div class="custom-control custom-checkbox text-center">
                        <input type="checkbox" class="custom-control-input" id="recommend-tick" asp-for="RememberMe">
                        <label class="custom-control-label color-grey" for="recommend-tick">Ghi nhớ tài khoản</label>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <p class="mb-0 text-center color-grey">Chưa có tài khoản? <a asp-action="Register" class="color-green">Đăng ký</a></p>
                </div>
            </form>
        </div>
    </div>
</div>