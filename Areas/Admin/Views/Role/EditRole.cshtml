@model EditRoleViewModel
@{
    ViewData["Title"] = "Cập nhật role";
}
<section class="content-header">
    <h1>
        Role
        <small>Cập nhật Role</small>
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <form method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled="disabled" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" disabled="disabled" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleDes" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleDes" class="form-control" />
                <span asp-validation-for="RoleDes" class="text-danger"></span>
            </div>
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="ListRole">Hủy</a>
            </div>
        </div>

        <div class="box box-info">
            <div class="box-header">
                <h3>Danh sách user</h3>
            </div>
            <div class="box-body">
                @if (Model.Users.Any())
                {
                    <h5 class="card-title">
                        @foreach (var user in Model.Users)
                        {
                            <span class="tammxspan">@user</span>

                        }
                    </h5>
                }
                else
                {
                    <h5 class="card-title">Chưa có user</h5>
                }
            </div>
            <div class="box-footer">
                <a asp-action="EditUsersInRole" asp-controller="Role" asp-route-roleId="@Model.Id" class="btn btn-primary">Thêm/xóa user khỏi role</a>
            </div>
        </div>
    </form>
</section>


